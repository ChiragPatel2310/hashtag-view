<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HashtagView">
        <attr name="itemTextColor" format="color"/>
        <attr name="itemTextSize" format="dimension"/>
        <attr name="itemTextGravity" format="enum">
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
            <enum name="center" value="17"/>
        </attr>
        <attr name="itemBackground" format="color|reference"/>
        <attr name="itemForeground" format="color|reference"/>
        <attr name="itemMargin" format="dimension"/>
        <attr name="itemPaddingLeft" format="dimension"/>
        <attr name="itemPaddingRight" format="dimension"/>
        <attr name="itemPaddingTop" format="dimension"/>
        <attr name="itemPaddingBottom" format="dimension"/>
        <attr name="itemMinWidth" format="dimension"/>
        <attr name="rowMargin" format="dimension"/>
        <attr name="rowGravity" format="enum">
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
            <enum name="center" value="17"/>
        </attr>
        <attr name="rowMode" format="enum">
            <enum name="wrap" value="0"/>
            <enum name="stretch" value="1"/>
        </attr>
    </declare-styleable>

</resources>