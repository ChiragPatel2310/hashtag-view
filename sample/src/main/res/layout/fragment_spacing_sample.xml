<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="10dp"
             android:paddingRight="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:overScrollMode="never"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:scrollbars="none">

        <android.support.v7.widget.CardView
            style="@style/Card"
            app:cardUseCompatPadding="true">

            <LinearLayout style="@style/CardContainer">

                <TextView
                    style="@style/CardTitle"
                    android:text="@string/title_spacing"/>

                <FrameLayout style="@style/Section.Container">

                    <TextView
                        style="@style/Section.Text"
                        android:text="Paddings"/>
                </FrameLayout>

                <com.greenfrvr.hashtagview.HashtagView
                    android:id="@+id/hashtags1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="4dp"
                    app:rowGravity="center"
                    app:rowMode="wrap"
                    app:tagBackground="@drawable/rounded_rect_1"
                    app:tagForeground="@drawable/flat_button_light"
                    app:tagPaddingBottom="16dp"
                    app:tagPaddingLeft="12dp"
                    app:tagPaddingRight="12dp"
                    app:tagPaddingTop="16dp"
                    app:tagTextColor="#E5E5E5"
                    app:tagTextGravity="right"
                    app:tagTextSize="14sp"/>

                <FrameLayout style="@style/Section.Container">

                    <TextView
                        style="@style/Section.Text"
                        android:text="Margins"/>
                </FrameLayout>

                <com.greenfrvr.hashtagview.HashtagView
                    android:id="@+id/hashtags2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="4dp"
                    app:rowGravity="center"
                    app:rowMargin="8dp"
                    app:rowMode="wrap"
                    app:tagBackground="@drawable/rounded_rect_1"
                    app:tagForeground="@drawable/flat_button_light"
                    app:tagMargin="8dp"
                    app:tagPaddingBottom="8dp"
                    app:tagPaddingLeft="6dp"
                    app:tagPaddingRight="6dp"
                    app:tagPaddingTop="8dp"
                    app:tagTextColor="#E5E5E5"
                    app:tagTextGravity="right"
                    app:tagTextSize="14sp"/>

                <FrameLayout style="@style/Section.Container">

                    <TextView
                        style="@style/Section.Text"
                        android:text="Stretch"/>
                </FrameLayout>

                <com.greenfrvr.hashtagview.HashtagView
                    android:id="@+id/hashtags3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="4dp"
                    app:rowGravity="right"
                    app:rowMode="stretch"
                    app:tagBackground="@drawable/rounded_rect_1"
                    app:tagForeground="@drawable/flat_button_light"
                    app:tagPaddingBottom="8dp"
                    app:tagPaddingLeft="6dp"
                    app:tagPaddingRight="6dp"
                    app:tagPaddingTop="8dp"
                    app:tagTextColor="#E5E5E5"
                    app:tagTextGravity="center"
                    app:tagTextSize="14sp"/>

                <include layout="@layout/layout_buttons"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</FrameLayout>